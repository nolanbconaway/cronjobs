#!/usr/bin/zsh

# Run a python job within the jobs environment.

# Enter the jobs dir first
DIR=`dirname $0`
cd $DIR; 

# set up zsh
source $HOME/.zshrc

# export env vars
set -o allexport
[[ -f .env ]] && source .env
set +o allexport

# set up pyenv
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

pyenv activate "$(cat .python-version)";
python $@